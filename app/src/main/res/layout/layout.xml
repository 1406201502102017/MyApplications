<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarSize="12dp"
    android:visibility="visible"><![CDATA[
    tools:context=".hw1.Layout">
    ]]>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="First Homework!"
        android:textAlignment="center"
        android:textColor="#AA0808"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="name"
        android:inputType="textPersonName"
        android:scrollbarSize="14dp"
        android:text="Имя"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:lineSpacingExtra="1dp"
        android:text="ПУСК"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="32dp"
        app:icon="@color/teal_200"
        app:iconPadding="10dp"
        app:iconTint="#980808"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:rippleColor="#011340"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:checked="true"
        android:text="Тумблер"
        android:textAlignment="center"
        android:textColor="#0528AA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="280dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="165dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-black"
        android:text="CheckBox"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="541dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="175dp"
        android:layout_height="78dp"
        android:baselineAligned="false"
        android:ellipsize="start"
        android:fontFamily="cursive"
        android:text="ToggleButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#D80808"
        android:textColorHint="#E40909"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="457dp" />

</LinearLayout>